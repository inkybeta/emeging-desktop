<Window x:Class="emeging.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="emeging" Height="147" Width="343" ResizeMode="NoResize">
	<Grid>
		<TextBlock Text="Connect to a server" Margin="10,10,0,0" Height="17" VerticalAlignment="Top" HorizontalAlignment="Left" Width="104"></TextBlock>
		<TextBlock Text="Server IP:" Margin="10,32,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"></TextBlock>
		<TextBox x:Name="Ip" Margin="72,32,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" ></TextBox>
		<TextBlock Text="Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,57,0,0"></TextBlock>
		<TextBox x:Name="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Margin="72,55,0,0"></TextBox>
		<Button Content="Connect" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Height="24" Width="68" Click="Button_Click"></Button>
	</Grid>
</Window>
